
@model Product

<form method="post">
	<input asp-for="Id" hidden />
	<div class=" p-3  mt-2">
		<div class="row">
			<h2 class="p-0"> Delete Product</h2>
		</div>
		<hr />
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label class="mb-2">Book Title</label>
			<input asp-for="Title" type="text" class=" form-control" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Description" class="mb-2"></label>
			<input asp-for="Description" class=" form-control p" />
		
		</div>
		<div class="mb-3">
			<label asp-for="ISBN" class="mb-2"></label>
			<input asp-for="ISBN" class=" form-control p" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Author" class="mb-2"></label>
			<input asp-for="Author" class=" form-control p" />
			
		</div>
		<div class="mb-3">
			<label asp-for="ListPrice" class="mb-2"></label>
			<input asp-for="ListPrice" class=" form-control p" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Price" class="mb-2"></label>
			<input asp-for="Price" class=" form-control p" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Price50" class="mb-2"></label>
			<input asp-for="Price50" class=" form-control p" />
		
		</div>
		<div class="mb-3">
			<label asp-for="Price100" class="mb-2"></label>
			<input asp-for="Price100" class=" form-control p" />
			
		</div>
		<div class="row mt-2">
			<div class="col-6 col-md-3">
				<button class="btn btn-danger form-control" asp-controller="Product" asp-action="Delete">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control"> Back to List </a>
			</div>
		</div>

	</div>

</form>

