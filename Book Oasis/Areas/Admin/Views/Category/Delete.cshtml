@model Category

<form method="post">
	<input asp-for="Id" hidden />
	<div class=" p-3  mt-2">
		<div class="row">
			<h2 class="p-0"> Delete Category</h2>
		</div>
		<hr />
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label class="mb-2">Category Name</label>
			<input asp-for="Name" type="text" class=" form-control" disabled />
			
		</div>
		<div class="mb-3">
			<label asp-for=DisplayOrder class="mb-2"></label>
			<input asp-for="DisplayOrder" class=" form-control" disabled />

		</div>
		<div class="row mt-2">
			<div class="col-6 col-md-3">
				<button class="btn btn-danger form-control" asp-controller="Category" asp-action="Delete">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control"> Back to List </a>
			</div>
		</div>

	</div>

</form>

